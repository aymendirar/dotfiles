{
  // *** WORKBENCH ***
  "workbench.settings.editor": "json",
  "workbench.colorTheme": "Catppuccin Macchiato",
  "workbench.editor.enablePreview": false,
  "workbench.sideBar.location": "right",
  "workbench.iconTheme": "eq-material-theme-icons-light",
  "workbench.startupEditor": "newUntitledFile",
  "workbench.editor.restoreViewState": false,
  "workbench.settings.openDefaultSettings": true,
  "workbench.settings.useSplitJSON": true,

  // *** EDITOR ***
  "editor.fontFamily": "BlexMono Nerd Font Mono",
  "editor.fontWeight": "600",
  "editor.fontLigatures": true,
  "editor.fontSize": 15,
  "editor.suggestSelection": "first",
  "editor.wordWrap": "on",
  "editor.insertSpaces": true,
  "editor.detectIndentation": true,
  "editor.matchBrackets": "never",
  "editor.autoIndent": "full",
  "editor.columnSelection": false,
  "editor.cursorStyle": "block",
  "editor.cursorBlinking": "solid",
  "editor.bracketPairColorization.enabled": true,
  "editor.guides.bracketPairs": "active",
  "editor.cursorSurroundingLines": 9999,
  "editor.smoothScrolling": true,

  // *** WINDOW ***
  "window.restoreWindows": "none",
  "window.titleBarStyle": "custom",
  "window.zoomLevel": -1.6,

  // *** EXPLORER ***
  "explorer.compactFolders": false,

  // *** TERMINAL ***
  "terminal.integrated.lineHeight": 1.0,
  "terminal.integrated.fontFamily": "BlexMono Nerd Font Mono",
  "terminal.integrated.fontSize": 14,
  "terminal.integrated.fontWeight": 600,
  "terminal.integrated.tabs.enabled": false,
  "terminal.integrated.copyOnSelection": true,

  "gitlens.currentLine.fontFamily": "BlexMono Nerd Font Mono",
  "gitlens.currentLine.fontWeight": "600",

  // *** FORMATTING AND LANGUAGE SPECIFIC ***
  "editor.formatOnSave": true,
  "prettier.requireConfig": true,
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[python]": {
    "editor.defaultFormatter": "ms-python.python"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[markdown]": {
    "editor.defaultFormatter": null,
    "editor.formatOnSave": false
  },
  "gopls": {
    "build.buildFlags": ["-mod=readonly"]
  },

  // *** PYTHON ***
  "python.defaultInterpreterPath": "/usr/local/bin/python3",
  "python.languageServer": "Pylance",

  // *** VIM ***
  "vim.useCtrlKeys": true,
  "vim.camelCaseMotion.enable": true,
  "vim.cursorStylePerMode.visual": "block",
  "vim.cursorStylePerMode.visualblock": "block",
  "vim.cursorStylePerMode.visualline": "block",
  "vim.leader": " ",
  "vim.startofline": false,
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": ["u"],
      "commands": ["undo"]
    },
    {
      "before": ["<C-r>"],
      "commands": ["redo"]
    },
    {
      "before": ["j"],
      "after": ["j", "z", "z"]
    },
    {
      "before": ["k"],
      "after": ["k", "z", "z"]
    },
    {
      "before": ["<C-d>"],
      "after": ["<C-d>", "z", "z"]
    },
    {
      "before": ["<C-u>"],
      "after": ["<C-u>", "z", "z"]
    },
    {
      "before": ["<leader>", "t", "s"],
      "commands": ["workbench.action.toggleSidebarVisibility"]
    },
    {
      "before": ["<leader>", "t", "r"],
      "commands": ["revealInExplorer"]
    },
    {
      "before": ["leader", "g", "d"],
      "commands": ["git.openChange"]
    },
    {
      "before": ["g", "t"],
      "commands": ["editor.action.goToTypeDefinition"]
    },
    {
      "before": ["g", "r"],
      "commands": ["editor.action.goToReferences"]
    },
    {
      "before": ["<leader>", "r"],
      "commands": ["editor.action.rename"]
    },
    {
      "before": ["<leader>", "q", "h"],
      "commands": ["workbench.action.closeEditorsToTheLeft"]
    },
    {
      "before": ["<leader>", "q", "l"],
      "commands": ["workbench.action.closeEditorsToTheRight"]
    },
    {
      "before": ["<leader>", "q", "x"],
      "commands": ["workbench.action.closeOtherEditors"]
    },
    {
      "before": ["<leader>", "h"],
      "commands": ["workbench.action.navigateLeft"]
    },
    {
      "before": ["<leader>", "o"],
      "commands": ["git.openFile"]
    },
    {
      "before": ["<leader>", "l"],
      "commands": ["workbench.action.navigateRight"]
    },
    {
      "before": ["<leader>", "j"],
      "commands": ["workbench.action.navigateDown"]
    },
    {
      "before": ["<leader>", "k"],
      "commands": ["workbench.action.navigateUp"]
    },
    {
      "before": ["<leader>", "i"],
      "commands": ["workbench.action.nextEditorInGroup"]
    },
    {
      "before": ["<leader>", "u"],
      "commands": ["workbench.action.previousEditorInGroup"]
    },
    {
      "before": ["<leader>", "f", "w"],
      "commands": [
        "editor.action.formatDocument",
        "workbench.action.files.save"
      ]
    },
    {
      "before": ["<leader>", "s", "p"],
      "commands": ["workbench.action.findInFiles"]
    },
    {
      "before": ["<leader>", "p"],
      "commands": ["workbench.action.quickOpen"]
    },
    {
      "before": ["<leader>", "c", "p"],
      "commands": ["copyFilePath"]
    },
    {
      "before": ["<leader>", "c", "r"],
      "commands": ["copyRelativeFilePath"]
    },
    {
      "before": ["<leader>", "a"],
      "commands": ["editor.action.quickFix"]
    },
    {
      "before": ["<leader>", "s", "f"],
      "commands": ["workbench.action.editor.changeLanguageMode"]
    }
  ],
  "vim.normalModeKeyBindings": [
    {
      "before": ["<leader>", "n"],
      "after": ["^"]
    },
    {
      "before": ["K"],
      "commands": ["editor.action.showHover"]
    },
    {
      "before": ["T"],
      "commands": ["editor.action.peekTypeDefinition"]
    },
    {
      "before": ["Y"],
      "after": ["y", "$"]
    }
  ],
  "vim.insertModeKeyBindings": [
    {
      "before": ["j", "j"],
      "after": ["<esc>"]
    }
  ],
  "vim.visualModeKeyBindingsNonRecursive": [
    {
      "before": ["leader", "g", "y"],
      "commands": ["gitlens.copyRemoteFileUrlToClipboard"]
    },
    {
      "before": ["<leader>", "c"],
      "commands": ["editor.action.commentLine"]
    }
  ],
  "vim.autoindent": true,
  "vim.hlsearch": true,
  "vim.useSystemClipboard": true,
  "vim.easymotion": true,
  "vim.surround": true,
  "terminal.integrated.gpuAcceleration": "on",
  "security.workspace.trust.untrustedFiles": "open",
  "workbench.layoutControl.enabled": false,
  "editor.stickyScroll.enabled": true,
  "editor.minimap.enabled": false,
  "workbench.colorCustomizations": {
    "terminal.background": "#00000000"
  },
  "workbench.settings.applyToAllProfiles": ["workbench.colorCustomizations"],
  "terraform.languageServer.enable": true
}
